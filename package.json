{
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^7.2.0"
  },
  "main": "electron-main.js",
  "scripts": {
    "electron-dev": "concurrently \"npm run dev --prefix src/frontend\" \"npm run electron\"",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-build": "npm run build --prefix src/frontend && electron-builder",
    "electron-start": "electron ."
  },
  "build": {
    "appId": "com.yourcompany.yourappname",
    "productName": "Your App Name",
    "files": [
      "src/frontend/out/**/*",
      "electron-main.js"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
